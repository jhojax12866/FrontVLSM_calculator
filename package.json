{
  "name": "vlsm-calculator",
  "version": "1.0.0",
  "description": "Aplicación para calcular VLSM y configurar servidores",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "author": "Tu Nombre",
  "dependencies": {
    "ssh2": "^1.15.0",
    "vlsm-calculator": "file:"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tuempresa.vlsmcalculator",
    "productName": "VLSM Calculator Pro",
    "copyright": "Copyright © 2025 Tu Empresa",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VLSM Calculator"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons",
      "category": "Utility"
    }
  }
}
